<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <form action="/ta03" method="POST">
          <label for="tag">Tag:</label>
          <input type="text" name="tag" id="tag">
          <button type="submit" class="btn">Submit</button>
          <% if (title=='Search' ) { %>
            <a href="/ta03" class="btn">Reset</a>
            <% } %>
        </form>
        <div class="grid">
          <% for (let product of products) { %>
            <article class="card">
              <img class="card-img-top" src="<%= product.imageUrl %>" alt="<%= product.name %>">
              <div class="card-body">
                <h1 class="card-title">
                  <%= product.name %>
                </h1>

                <h2 class="card-text">$
                  <%= product.price %>
                </h2>
                <% for (let tag of product.tags) { %>
                  <p class="card-text">
                    <%= tag %>
                  </p>
                  <% } %>

              </div>
            </article>
            <% } %>
        </div>
      </div>
    </div>
    <div class="container">

    </div>


</body>

</html>